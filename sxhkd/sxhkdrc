# UTILS

super + shift + Escape
	python ~/.power.py shutdown

super + shift + grave
	python ~/.power.py reboot

super + l
	i3lock-fancy -p

Caps_Lock
	~/.layout.py
	
ctrl + space
	~/.layout.py
	
alt + shift
	~/.layout.py

# LAUNCHERS

#F3
#	sh ~/.toggle.sh

Sys_Req
	gnome-screenshot

super + r
	sh ~/.rofi.sh

super + v
	nautilus

super + b
	firefox

super + c
	subl3

super + x
	termite

# SOUND

alt + e
	pactl -- set-sink-volume 0 -5%

alt + r
	pactl -- set-sink-volume 0 +5%

alt + m
	pactl set-sink-mute 0 toggle

#System

# Brightness goes up
XF86MonBrightnessUp
    /home/user-name/.config/bspwm/Scripts/brightnessScript

# Brightness goes down
XF86MonBrightnessDown
    /home/user-name/.config/bspwm/Scripts/brightnessScript

# WM

alt + q
	bspc node focused -c

alt + {z,t,f}
	bspc node focused -t {floating,tiled,fullscreen}

super + {a,s,w,d}
	bspc node focused -s {west,south,north,east}

alt + {a,s,w,d}
	bspc node focused -f {west,south,north,east}

alt + Tab
	bspc node focused -f next

super + shift + {1-7}
	bspc node focused -d ^{1-7}

super + {1-7}
	bspc desktop -f ^{1-7}

~button1
	bspc pointer -g focus
	
# Raises volume
XF86AudioRaiseVolume
 amixer set Master 2%+

# Lowers volume
XF86AudioLowerVolume
 amixer set Master 2%-

# Mutes
XF86AudioMute
 amixer set Master toggle

# Brightness goes up
XF86MonBrightnessUp
 brightnessScript

# Brightness goes down
XF86MonBrightnessDown
 brightnessScript

# Screen lock
XF86ScreenSaver
 blur

# Turns off laptop
XF86Launch1
 systemctl poweroff

# Reloads bspwm..don't know if it works
ctrl + super + r
 bspc reload

